{
  "$schema": "https://turborepo.com/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "next-env.d.ts"]
    },
    "deploy": {
      "dependsOn": ["build","@permashelf/db#push"],
      "cache": false,
      "interactive": false
    },
    "dev": {
      "persistent": true
    }
  }
}
